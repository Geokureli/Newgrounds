<vbox width="100%">
	<hbox width="100%">
		<vbox width="150">
			<section-header text="Session"/>
			<button text="Login" width="100%" id="login"/>
			<hbox>
				<image id="userIcon"
					resource="Assets/images/pfp.png"
					width="60" height="60"
					scaleMode="fitheight"
					style="border:1px"
				/>
				<vbox>
					<button id="url" text="url" width="50"/>
					<image id="supporter"
						resource="Assets/images/supporter.png"
						width="32" height="32"
						scaleMode="fitheight"
					/>
				</vbox>
			</hbox>
			<label id="username" text="UserName"
				width="120"
				style="border:1px"
			/>
		</vbox>
		
		<vbox width="100%" height="100%">
			<section-header text="Medals"/>
			<scrollview width="100%" height="110" style="borderSize:0;padding:0;">
				<grid columns="10" id="medalList">
				</grid>
			</scrollview> 
		</vbox>
	</hbox>
	<spacer height="10"/>
	<hbox width="100%">
		<box id="cloudSaveContainer" width="50%" style="padding:0;"/>
		<box id="scoreBoardContainer" width="50%" style="padding:0;spacing:0;"/>
	</hbox>
</vbox>